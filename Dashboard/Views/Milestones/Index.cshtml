@model IEnumerable<Dashboard.Models.Milestone>

@{
    ViewData["Title"] = "Index";
}

<div>
    <a class="back" href="javascript: history.go(-1)"><img src="https://cdn-icons-png.flaticon.com/512/130/130882.png"
            height="4%" width="4%" /></a>
    <h1 class="text-center">Вехи</h1>
    <h5 class="text-center">
        Вех:@Model.Count()
    </h5>
    <style>
        #ID {
            border: none;
            align-self: center;
            @* background-color: #72b9f3; *@
            outline: none;
            text-align: center;
        }
    </style>
</div>

<form name="forma" asp-controller="Tasks" asp-action="Index" method="get">
    <input type="hidden" name="Id" id="Idinput">

</form>

<script>
    function func(ID) {
        let a = document.querySelector("#Idinput");
        a.value = ID;
        let form = document.forms.forma;
        form.submit();
    };
</script>

@{
    <div class="container-fluid" style="margin-top:10px">
        <div @*class="row display-flex"*@ style="cursor: pointer;" &gt;&lt;/div&gt;>
            <div class="gridCss">
                @foreach (var pur in Model)
                {
                    @* <table>
                        <tr> *@
                    <div class="milestnsMain" style="background: #DAE5D0 linear-gradient(to top, #b1bba7 @pur.Completion%, transparent 0%);">
                        <span class="nameOfM1" @*style="color:#337ab7"*@>@pur.Name<br />
                            <div>
                                <span @*style="color:indianred"*@>@*Date Of Begining : *@ @Html.Encode(string.Format("{0:dd/MM/yyyy}",pur.DateOfBegining))</span><br />
                                <span @*style="color:indianred"*@>@*Date Of Finish : *@ @Html.Encode(string.Format("{0:dd/MM/yyyy}",pur.DateOfFinish))</span><br />
                            </div>
                            <input type="button" onclick="func(@pur.Id)">
                            <div class="comPri">
                                <span class="completion" @*style="color:indianred"*@>@*Completion : *@ @pur.Completion%</span>
                                <span class="priority" @*style="color:indianred"*@>@*Priority : *@ @pur.Priority</span><br />
                            </div>
                            @* <span id="Id" style="color:indianred">id : </span>@pur.Id<br />
                                <input type="hidden" id="Idpr" value="@pur.Id"> *@

                    </div>
                    @* </tr>
                        </table> *@
                }
            </div>
        </div>
    </div>
}